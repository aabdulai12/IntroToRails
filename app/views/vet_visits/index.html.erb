<div class="container">
  <h1 class="text-center mb-4 display-4">All Vet Visits</h1>

  <div class="row">
    <% @vet_visits.each do |visit| %>
      <div class="col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">Visit Date: <%= visit.visit_date %></h5>
            <p class="card-text">
              <strong>Description:</strong> <%= visit.description %><br>
              <strong>Dog Name:</strong> <%= visit.dog.name %><br>
              <strong>Breed:</strong> <%= visit.dog.breed.name %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="pagination justify-content-center">
    <%= paginate @vet_visits %>
  </div>
</div>
