<div class="container">
  <h1 class="text-center mb-4 display-4">Dogs</h1>

  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= dog.name %></h5>
            <p class="card-text">
              <strong>Breed:</strong> <%= dog.breed.name %><br>
              <strong>Group:</strong> <%= dog.breed.group %><br>
              <strong>Section:</strong> <%= dog.breed.section %><br>
              <strong>Country:</strong> <%= dog.breed.country %>
            </p>
            <%= link_to 'More Details', dog_path(dog), class: "btn btn-primary w-100 mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="pagination justify-content-center">
    <%= paginate @dogs %>
  </div>
</div>
