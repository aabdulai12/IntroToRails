<div class="container">
  <h1 class="text-center mb-4 display-4">Owners</h1>

  <%= form_with url: owners_path, method: :get, local: true do %>
    <div class="form-group row mb-4">
      <div class="col-md-8">
        <%= label_tag :search_term, "Search Owners", class: "form-label" %>
        <%= text_field_tag :search_term, params[:search_term], class: "form-control", placeholder: "Enter owner name" %>
      </div>
      <div class="col-md-4 align-self-end">
        <%= submit_tag "Search", class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <% @owners.each do |owner| %>
      <div class="col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= owner.name %></h5>
            <p class="card-text"><strong>Email:</strong> <%= owner.email %></p>
            <%= link_to 'View Details', owner_path(owner), class: "btn btn-info mt-3 w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="pagination justify-content-center">
    <%= paginate @owners %>
  </div>
</div>
