<% if @owner.present? %>
  <h1 class="text-center">Owner Details</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Name: <%= @owner.name %></h5>
      <p class="card-text">Email: <%= @owner.email %></p>
      <p class="card-text">Breeds Count: <%= @owner.breed_count %></p>

      <% if @owner.breed_count.positive? %>
        <p class="card-text">Breeds:</p>
        <ul>
          <% @owner.breeds.each do |breed| %>
            <li>
              <%= link_to breed.name, breed_path(breed) %>
              <% if breed.description.present? %>
                <%= breed.description %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="card-text">No breed.</p>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    <p>No owner found.</p>
  </div>
<% end %>

<%= link_to 'Back', owners_path, class: 'btn btn-primary' %>
